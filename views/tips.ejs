    <script src="/js/navigation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scrolling for anchor links
            document.querySelectorAll('.tips-nav-link').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Remove active class from all links
                    document.querySelectorAll('.tips-nav-link').forEach(link => {
                        link.classList.remove('active');
                    });
                    
                    // Add active class to clicked link
                    this.classList.add('active');
                    
                    // Get the target section
                    const targetId = this.getAttribute('href').substring(1);
                    const targetSection = document.getElementById(targetId);
                    
                    if (targetSection) {
                        // Scroll to the target section
                        targetSection.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // Search functionality
            const searchInput = document.getElementById('tipsSearch');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    
                    if (searchTerm.length < 2) {
                        // Show all sections if search term is too short
                        document.querySelectorAll('.tip-section, .tip-subsection, .tip-item').forEach(el => {
                            el.style.display = '';
                        });
                        return;
                    }
                    
                    // Hide all sections initially
                    document.querySelectorAll('.tip-section').forEach(section => {
                        section.style.display = 'none';
                    });
                    
                    // Search in section titles, subsection titles, and list items
                    document.querySelectorAll('.tip-section-title, .tip-subsection-title, .tip-item').forEach(el => {
                        const text = el.textContent.toLowerCase();
                        
                        if (text.includes(searchTerm)) {
                            // Show this element and its parent section
                            el.style.display = '';
                            
                            let parent = el;
                            while (parent && !parent.classList.contains('tip-section')) {
                                parent = parent.parentElement;
                            }
                            
                            if (parent) {
                                parent.style.display = '';
                            }
                        }
                    });
                });
            }
        });
    </script>
